<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addRecurringTask">

    <EditText
        android:id="@+id/enterRecurringName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Recurring Task Name"
        android:inputType="text"/>
    <!--enter in the date.
    for now just a string.-->
    <EditText
        android:id="@+id/enterRecurringDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Recurring Date"
        android:inputType="date"
        android:layout_below="@+id/enterRecurringName"/>

    <EditText
        android:id="@+id/enterStringRecurringLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="text"
        android:hint="Event Location"
        android:layout_below="@+id/enterRecurringDate" />
    <EditText
        android:id="@+id/enterRecurringDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="textMultiLine"
        android:hint="Description"
        android:layout_below="@+id/enterStringRecurringLocation"/>

    <EditText
        android:id="@+id/enterRecurringTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="time"
        android:hint="Time"
        android:layout_below="@+id/enterRecurringDescription"/>

    <Button
        android:id="@+id/initRecurringTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Add Reminder" />
</RelativeLayout>